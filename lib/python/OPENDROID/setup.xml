<!--suppress XmlUnboundNsPrefix -->
<setupxml>
    <setup key="timerimagemanager" title="Setup">
        <!--item level="1" text="Automatic settings backup" description="Perform a settings backup before updating.">config.imagemanager.autosettingsbackup</item-->
        <item level="2" text="Backup Location" description="Location of where image backup should be saved.">config.imagemanager.backuplocation</item>
        <item level="2" text="Backup prefix" description="Allows you to tag your image backup to a box. (default is box name/type)">config.imagemanager.folderprefix</item>
        <item level="2" text="Schedule Backups" description="Allows you schedule your image backups.">config.imagemanager.schedule</item>
        <item level="2" text="Time of Backup to start" requires="config.imagemanager.schedule" description="Set the time of backup to start.">config.imagemanager.scheduletime</item>
        <item level="2" text="Repeat how often" requires="config.imagemanager.schedule" description="Set the repeat interval of backup schedule.">config.imagemanager.repeattype</item>
        <item level="2" text="Query before image backup starts" requires="config.imagemanager.schedule" description="Query before starting image backup.">config.imagemanager.query</item>
        <!--item level="2" text="Max image backups to keep (0==all)" requires="config.imagemanager.schedule" description="Backups to keep">config.imagemanager.number_to_keep</item-->
    </setup>
    <setup key="bootmanagertimeout" title="Setup">
        <item level="2" text="Setup Timeout for OPDBootmanager" description="Setup Timeout for OPDBootmanager.">config.OPDBootmanager.bootmanagertimeout</item>
    </setup>
    <setup key="maxbackup" title="Setup">
        <item level="2" text="Setup max. backups on storage" description="Setup max. backups on storage 0=all">config.imagemanager.backupmax</item>
    </setup>           
</setupxml> 
